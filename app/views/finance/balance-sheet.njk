{% extends '_layout.njk' %}

{% block content %}

  <h2>Balance Overview</h2>

  <br/>

  <table class="table table-hover table-sm small">
    <tr>
      <th style="text-align:center">IN</th>
      <th style="text-align:center">Amount Expected</th>
      <th style="text-align:center">Actual Amount</th>
      <th style="text-align:center"></th>
      <th style="text-align:center">OUT</th>
      <th style="text-align:center">Amount Expected</th>
      <th style="text-align:center">Amount Paid</th>
    </tr>
    <tbody>
      <tr>
        <td style="text-align:center">Weekly Fees</td>
        <td style="text-align:center">{{ balance.weeklyFees }}</td>
        <td style="text-align:center"></td>
        <td style="text-align:center"></td>
        <td style="text-align:center">Weekly Prize</td>
        <td style="text-align:center">{{ balance.weeklyPrizeExpected }}</td>
        <td style="text-align:center">{{ balance.weeklyPrizeOut }}</td>
      </tr>
      <tr>
        <td style="text-align:center">Joining Fees</td>
        <td style="text-align:center">{{ balance.joiningFees }}</td>
        <td style="text-align:center"></td>
        <td style="text-align:center"></td>
        <td style="text-align:center">Fiver Draws</td>
        <td style="text-align:center">
          {{ balance.fiverExpected }}
        </td>
        <td style="text-align:center">
          {{ balance.fiverOut }}
        </td>
      </tr>
      <tr>
        <td style="text-align:center">Cup Entry</td>
        <td style="text-align:center">
          {{ balance.cupFees }}
        </td>
        <td style="text-align:center"></td>
        <td style="text-align:center"></td>
        <td style="text-align:center">End of Season Prizes</td>
        <td style="text-align:center">
          {{ balance.leagueCupExpected }}
        </td>
        <td style="text-align:center">
          {{ balance.leagueCupOut }}
        </td>
      </tr>
      <tr>
        <td style="text-align:center">League Cup Entry </td>
        <td style="text-align:center">
          {{ balance.leagueCupFees }}
        </td>
        <td style="text-align:center"></td>
        <td style="text-align:center"></td>
        <td style="text-align:center"> Jackpot</td>
        <td style="text-align:center">
          {{ balance.jackpotExpected }}
        </td>
        <td style="text-align:center">
          {{ balance.jackpotOut }}
        </td>
      </tr>
      <tr></tr>
      <tr>
        <td style="text-align:center">Total In</td>
        <td style="color:blue; text-align:center">
          {{ balance.expectedTotalIn }}</td>
        <td style="color:red; text-align:center">
          {{ balance.currentTotalIn }}
        </td>
        <td style="text-align:center; text-align:center"></td>
        <td style="text-align:center"> Total Out</td>
        <td style="color:blue; text-align:center">
          {{ balance.currentTotalOut }}</td>
        <td style="color:red; text-align:center">
          {{ balance.expectedTotalOut }}
        </td>
      </tr>
    </tbody>
  </table>

{% endblock %}
